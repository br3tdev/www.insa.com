{
  "extends": "@workspace/typescript-config/base.json",
  "compilerOptions": {
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "rootDir": "src",
    "paths": {
      "@/apis/*": ["../../apps/apis/src/*"]
    },
    "typeRoots": ["./node_modules/@types", "./node_modules/@cloudflare"],
    "types": ["node"],
    "declaration": true,
    "declarationMap": true,
    "outDir": "dist"
  },
  "include": ["src"],
  "watchOptions": {
    "excludeDirectories": ["**/node_modules", "**/packages/web"]
  }
}
